<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.app.assuranceendirect" version="0.0.1">
    <name>AssuranceEnDirect</name>
    <description>
        An application which provides many insurances
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Assurance en Direct Team
    </author>
	<preference name="SplashScreen" value="screen"/>
	<preference name="SplashScreenDelay" value="3000"/>
	<platform name="android">
              <icon density="ldpi" src="www/img/assurance-en-direct-icon-ldpi.png"/>
              <icon density="mdpi" src="www/img/assurance-en-direct-icon-mdpi.png"/>
              <icon density="hdpi" src="www/img/assurance-en-direct-icon-hdpi.png"/>
              <icon density="xhdpi" src="www/img/assurance-en-direct-icon-xhdpi.png"/>
    </platform>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" version="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
</widget>
